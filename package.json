    "exit-hook": "^2.2.1",
    "express": "^4.18.1",
    "graphile-worker": "^0.13.0",
    "graphql": "^16.5.0",
    "jest-extended": "^2.0.0",
    "tslog": "^3.3.3",
    "typescript": "^4.7.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.2.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
